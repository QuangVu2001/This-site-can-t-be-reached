<body>
    <!-- Top Section: Error Message -->
    <div class="error-section">
        <div class="background"></div>
        
        <div class="error-container">
            <div class="error-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            
            <h1>This site can't be reached</h1>
            
            <div class="no-connection">
                <i class="fas fa-plug"></i> No connection
            </div>
            
            <div class="actions">
                <button id="reload-btn">
                    <i class="fas fa-redo"></i> Reload
                </button>
                <button id="diagnose-btn">
                    <i class="fas fa-search"></i> Run Diagnostics
                </button>
            </div>
        </div>
    </div>
    
    <!-- Bottom Section: T-Rex Runner Game -->
    <div class="game-section">
        <div class="game-header">
            <div class="game-title">
                <i class="fas fa-gamepad"></i> T-Rex Runner Game
            </div>
            
            <div class="game-controls">
                <div class="score-container">
                    <div class="score-label">SCORE</div>
                    <div class="score-value" id="score">0</div>
                </div>
                
                <button id="start-btn">
                    <i class="fas fa-play"></i> Start Game
                </button>
            </div>
        </div>
        
        <div class="game-container">
            <canvas id="game-canvas"></canvas>
        </div>
        
        <div class="game-instructions">
            <p>Jump over the cacti and birds to score points. The game speeds up as your score increases!</p>
            <div class="controls-info">
                <div class="control-item">
                    <span class="key">SPACE</span> or <span class="key">UP ARROW</span> - Jump
                </div>
                <div class="control-item">
                    <span class="key">DOWN ARROW</span> - Duck
                </div>
                <div class="control-item">
                    <span class="key">R</span> - Restart Game
                </div>
            </div>
        </div>
    </div>

    <script>
        // Game variables
        let canvas, ctx;
        let gameRunning = false;
        let gameOver = false;
        let score = 0;
        let highScore = 0;
        let gameSpeed = 5;
        let frames = 0;
        
        // Game elements
        let dino = {
            x: 50,
            y: 150,
            width: 40,
            height: 60,
            jumping: false,
            ducking: false,
            jumpVelocity: 0,
            gravity: 0.5
        };
        
        let obstacles = [];
        let clouds = [];
        
        // Initialize game
        function initGame() {
            canvas = document.getElementById('game-canvas');
            ctx = canvas.getContext('2d');
            
            // Set canvas dimensions
            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;
            
            // Set ground level
            dino.y = canvas.height - dino.height - 20;
            
            // Create initial clouds
            for (let i = 0; i < 5; i++) {
                clouds.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * 80 + 20,
                    width: Math.random() * 40 + 20,
                    speed: Math.random() * 1 + 0.5
                });
            }
            
            // Start game loop
            gameLoop();
        }
        
        // Game loop
        function gameLoop() {
            // Clear canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Draw background
            drawBackground();
            
            // Draw ground
            drawGround();
            
            // Draw clouds
            drawClouds();
            
            // Update and draw dino
            updateDino();
            drawDino();
            
            // Update and draw obstacles
            updateObstacles();
            drawObstacles();
            
            // Draw score
            drawScore();
            
            // Draw game over screen
            if (gameOver) {
                drawGameOver();
            }
            
            // Increment frame counter
            frames++;
            
            // Request next frame
            requestAnimationFrame(gameLoop);
        }
        
        // Draw background
        function drawBackground() {
            // Sky gradient
            const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
            gradient.addColorStop(0, '#1e293b');
            gradient.addColorStop(1, '#0f172a');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Draw stars
            ctx.fillStyle = 'rgba(255, 255, 255, 0.8)';
            for (let i = 0; i < 20; i++) {
                const x = (frames / 2 + i * 50) % canvas.width;
                const y = 30 + (i * 15) % 60;
                const size = Math.random() * 2 + 1;
                ctx.beginPath();
                ctx.arc(x, y, size, 0, Math.PI * 2);
                ctx.fill();
            }
        }
        
        // Draw ground
        function drawGround() {
            // Ground
            ctx.fillStyle = '#334155';
            ctx.fillRect(0, canvas.height - 20, canvas.width, 20);
            
            // Ground line
            ctx.strokeStyle = '#475569';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(0, canvas.height - 20);
            ctx.lineTo(canvas.width, canvas.height - 20);
            ctx.stroke();
            
            // Ground pattern
            ctx.fillStyle = '#475569';
            for (let i = 0; i < canvas.width; i += 30) {
                const x = (i - frames * 2) % canvas.width;
                ctx.fillRect(x, canvas.height - 18, 15, 2);
            }
        }
        
        // Draw clouds
        function drawClouds() {
            ctx.fillStyle = 'rgba(255, 255, 255, 0.1)';
            clouds.forEach(cloud => {
                // Update cloud position
                cloud.x -= cloud.speed;
                if (cloud.x < -cloud.width) {
                    cloud.x = canvas.width;
                    cloud.y = Math.random() * 80 + 20;
                }
                
                // Draw cloud
                ctx.beginPath();
                ctx.arc(cloud.x, cloud.y, cloud.width/3, 0, Math.PI * 2);
                ctx.arc(cloud.x + cloud.width/3, cloud.y - cloud.width/6, cloud.width/3, 0, Math.PI * 2);
                ctx.arc(cloud.x + cloud.width/2, cloud.y, cloud.width/3, 0, Math.PI * 2);
                ctx.fill();
            });
        }
        
        // Update dino
        function updateDino() {
            if (!gameRunning || gameOver) return;
            
            // Apply gravity if jumping
            if (dino.jumping) {
                dino.y += dino.jumpVelocity;
                dino.jumpVelocity += dino.gravity;
                
                // Check if landed
                if (dino.y >= canvas.height - dino.height - 20) {
                    dino.y = canvas.height - dino.height - 20;
                    dino.jumping = false;
                    dino.jumpVelocity = 0;
                }
            }
        }
        
        // Draw dino
        function drawDino() {
            // Draw dino body
            ctx.fillStyle = '#10b981';
            ctx.fillRect(dino.x, dino.y, dino.width, dino.height);
            
            // Draw dino head
            ctx.fillStyle = '#059669';
            ctx.fillRect(dino.x + dino.width - 10, dino.y - 10, 20, 20);
            
            // Draw dino eye
            ctx.fillStyle = 'white';
            ctx.beginPath();
            ctx.arc(dino.x + dino.width + 5, dino.y - 3, 4, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.fillStyle = 'black';
            ctx.beginPath();
            ctx.arc(dino.x + dino.width + 5, dino.y - 3, 2, 0, Math.PI * 2);
            ctx.fill();
            
            // Draw dino legs
            const legOffset = Math.sin(frames * 0.2) * 5;
            if (!dino.jumping && gameRunning) {
                ctx.fillStyle = '#059669';
                ctx.fillRect(dino.x + 5, dino.y + dino.height, 8, 15);
                ctx.fillRect(dino.x + dino.width - 13, dino.y + dino.height, 8, 15 + legOffset);
            }
            
            // Draw tail
            ctx.fillStyle = '#059669';
            ctx.beginPath();
            ctx.moveTo(dino.x, dino.y + 10);
            ctx.lineTo(dino.x - 15, dino.y + 20);
            ctx.lineTo(dino.x, dino.y + 30);
            ctx.closePath();
            ctx.fill();
        }
        
        // Update obstacles
        function updateObstacles() {
            if (!gameRunning || gameOver) return;
            
            // Add new obstacle occasionally
            if (frames % (100 - Math.min(score, 70)) === 0) {
                const type = Math.random() > 0.5 ? 'cactus' : 'bird';
                const height = type === 'cactus' ? Math.random() * 20 + 30 : 20;
                const width = type === 'cactus' ? 15 : 25;
                const y = type === 'cactus' ? canvas.height - height - 20 : canvas.height - 80;
                
                obstacles.push({
                    x: canvas.width,
                    y: y,
                    width: width,
                    height: height,
                    type: type
                });
            }
            
            // Update obstacles
            for (let i = obstacles.length - 1; i >= 0; i--) {
                obstacles[i].x -= gameSpeed + score / 100;
                
                // Check collision
                if (checkCollision(dino, obstacles[i])) {
                    gameOver = true;
                    if (score > highScore) {
                        highScore = score;
                    }
                }
                
                // Remove obstacles that are off screen
                if (obstacles[i].x < -obstacles[i].width) {
                    obstacles.splice(i, 1);
                    if (!gameOver) {
                        score++;
                        document.getElementById('score').textContent = score;
                        
                        // Increase game speed gradually
                        if (score % 10 === 0) {
                            gameSpeed += 0.2;
                        }
                    }
                }
            }
        }
        
        // Draw obstacles
        function drawObstacles() {
            obstacles.forEach(obstacle => {
                if (obstacle.type === 'cactus') {
                    // Draw cactus
                    ctx.fillStyle = '#10b981';
                    ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
                    
                    // Cactus details
                    ctx.fillStyle = '#059669';
                    ctx.fillRect(obstacle.x - 3, obstacle.y + 10, 5, 10);
                    ctx.fillRect(obstacle.x + obstacle.width - 2, obstacle.y + 15, 5, 10);
                } else {
                    // Draw bird
                    ctx.fillStyle = '#f87171';
                    ctx.beginPath();
                    ctx.arc(obstacle.x + obstacle.width/2, obstacle.y + obstacle.height/2, obstacle.height/2, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Bird wing
                    ctx.fillStyle = '#ef4444';
                    ctx.beginPath();
                    ctx.ellipse(obstacle.x + obstacle.width/2 - 5, obstacle.y + obstacle.height/2, 10, 5, Math.PI/4, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Bird eye
                    ctx.fillStyle = 'white';
                    ctx.beginPath();
                    ctx.arc(obstacle.x + obstacle.width/2 + 5, obstacle.y + obstacle.height/2 - 3, 3, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.fillStyle = 'black';
                    ctx.beginPath();
                    ctx.arc(obstacle.x + obstacle.width/2 + 5, obstacle.y + obstacle.height/2 - 3, 1.5, 0, Math.PI * 2);
                    ctx.fill();
                }
            });
        }
        
        // Check collision
        function checkCollision(dino, obstacle) {
            return dino.x < obstacle.x + obstacle.width &&
                   dino.x + dino.width > obstacle.x &&
                   dino.y < obstacle.y + obstacle.height &&
                   dino.y + dino.height > obstacle.y;
        }
        
        // Draw score
        function drawScore() {
            ctx.fillStyle = '#e2e8f0';
            ctx.font = '20px monospace';
            ctx.textAlign = 'left';
            ctx.fillText(`SCORE: ${score}`, 20, 30);
            
            if (highScore > 0) {
                ctx.fillStyle = '#fbbf24';
                ctx.font = '16px monospace';
                ctx.fillText(`HIGH: ${highScore}`, 20, 55);
            }
        }
        
        // Draw game over screen
        function drawGameOver() {
            // Overlay
            ctx.fillStyle = 'rgba(15, 23, 42, 0.8)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Game over text
            ctx.fillStyle = '#f87171';
            ctx.font = 'bold 40px monospace';
            ctx.textAlign = 'center';
            ctx.fillText('GAME OVER', canvas.width/2, canvas.height/2 - 30);
            
            // Score text
            ctx.fillStyle = '#e2e8f0';
            ctx.font = '24px monospace';
            ctx.fillText(`Score: ${score}`, canvas.width/2, canvas.height/2 + 10);
            
            // High score text
            if (highScore > 0) {
                ctx.fillStyle = '#fbbf24';
                ctx.fillText(`High Score: ${highScore}`, canvas.width/2, canvas.height/2 + 40);
            }
            
            // Restart instruction
            ctx.fillStyle = '#94a3b8';
            ctx.font = '18px monospace';
            ctx.fillText('Press R to restart', canvas.width/2, canvas.height/2 + 80);
        }
        
        // Jump function
        function jump() {
            if (!gameRunning || gameOver || dino.jumping) return;
            dino.jumping = true;
            dino.jumpVelocity = -12;
        }
        
        // Start game function
        function startGame() {
            gameRunning = true;
            gameOver = false;
            score = 0;
            gameSpeed = 5;
            frames = 0;
            obstacles = [];
            
            document.getElementById('score').textContent = score;
            document.getElementById('start-btn').innerHTML = '<i class="fas fa-redo"></i> Restart Game';
        }
        
        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize game
            initGame();
            
            // Start game button
            document.getElementById('start-btn').addEventListener('click', startGame);
            
            // Reload button
            document.getElementById('reload-btn').addEventListener('click', function() {
                // Show loading state
                this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Reloading...';
                this.disabled = true;
                
                // Simulate reload attempt
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-redo"></i> Reload';
                    this.disabled = false;
                    
                    // Show notification
                    showNotification('Unable to reload the page. Please check your internet connection.');
                }, 1500);
            });
            
            // Diagnostics button
            document.getElementById('diagnose-btn').addEventListener('click', function() {
                showNotification('Diagnostics complete. Issues detected with network connection.');
            });
            
            // Game controls
            document.addEventListener('keydown', function(e) {
                // Jump on space or up arrow
                if ((e.code === 'Space' || e.code === 'ArrowUp') && !gameOver) {
                    jump();
                    e.preventDefault();
                }
                
                // Restart game on R key
                if (e.code === 'KeyR' && gameOver) {
                    startGame();
                }
                
                // Start game on Enter if not running
                if (e.code === 'Enter' && !gameRunning) {
                    startGame();
                }
            });
            
            // Touch controls for mobile
            canvas.addEventListener('click', function() {
                if (!gameOver && gameRunning) {
                    jump();
                } else if (!gameRunning) {
                    startGame();
                }
            });
            
            // Window resize handler
            window.addEventListener('resize', function() {
                canvas.width = canvas.offsetWidth;
                canvas.height = canvas.offsetHeight;
                dino.y = canvas.height - dino.height - 20;
            });
        });
        
        // Notification function
        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.innerHTML = `<i class="fas fa-info-circle"></i> ${message}`;
            notification.style.cssText = `
                position: fixed;
                bottom: 30px;
                left: 50%;
                transform: translateX(-50%) translateY(100px);
                background: rgba(30, 41, 59, 0.95);
                color: #f8fafc;
                padding: 15px 25px;
                border-radius: 12px;
                border-left: 4px solid #f87171;
                display: flex;
                align-items: center;
                gap: 10px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
                z-index: 1000;
                backdrop-filter: blur(10px);
                border: 1px solid rgba(255, 255, 255, 0.05);
                opacity: 0;
                transition: all 0.5s ease;
            `;
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.transform = 'translateX(-50%) translateY(0)';
                notification.style.opacity = '1';
            }, 10);
            
            // Remove after 4 seconds
            setTimeout(() => {
                notification.style.transform = 'translateX(-50%) translateY(100px)';
                notification.style.opacity = '0';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 500);
            }, 4000);
        }
    </script>
</body>
</html>
