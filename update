            justify-content: center;
            gap: 10px;
        }
        
        .no-connection i {
            color: #fbbf24;
        }
        
        .actions {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
            flex-wrap: wrap;
        }
        
        button {
            padding: 16px 32px;
            border: none;
            border-radius: 12px;
            font-size: 17px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            min-width: 180px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        
        #reload-btn {
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
