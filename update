    <script>
        // Game variables
        let canvas, ctx;
        let gameRunning = false;
        let gameOver = false;
        let score = 0;
        let highScore = 0;
        let gameSpeed = 5;
        let frames = 0;
        
        // Game elements
        let dino = {
            x: 50,
            y: 150,
            width: 40,
            height: 60,
            jumping: false,
            ducking: false,
            jumpVelocity: 0,
            gravity: 0.5
        };
        
        let obstacles = [];
        let clouds = [];
        
        // Initialize game
        function initGame() {
            canvas = document.getElementById('game-canvas');
            ctx = canvas.getContext('2d');
            
            // Set canvas dimensions
            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;
            
            // Set ground level
            dino.y = canvas.height - dino.height - 20;
            
            // Create initial clouds
            for (let i = 0; i < 5; i++) {
                clouds.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * 80 + 20,
                    width: Math.random() * 40 + 20,
                    speed: Math.random() * 1 + 0.5
                });
            }
            
            // Start game loop
            gameLoop();
        }
        
        // Game loop
        function gameLoop() {
            // Clear canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Draw background
            drawBackground();
            
            // Draw ground
            drawGround();
            
            // Draw clouds
            drawClouds();
            
            // Update and draw dino
            updateDino();
            drawDino();
            
            // Update and draw obstacles
            updateObstacles();
            drawObstacles();
            
            // Draw score
            drawScore();
            
            // Draw game over screen
            if (gameOver) {
                drawGameOver();
            }
            
            // Increment frame counter
            frames++;
            
            // Request next frame
            requestAnimationFrame(gameLoop);
        }
        
        // Draw background
        function drawBackground() {
            // Sky gradient
            const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
            gradient.addColorStop(0, '#1e293b');
            gradient.addColorStop(1, '#0f172a');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Draw stars
            ctx.fillStyle = 'rgba(255, 255, 255, 0.8)';
            for (let i = 0; i < 20; i++) {
                const x = (frames / 2 + i * 50) % canvas.width;
                const y = 30 + (i * 15) % 60;
                const size = Math.random() * 2 + 1;
                ctx.beginPath();
                ctx.arc(x, y, size, 0, Math.PI * 2);
                ctx.fill();
            }
        }
        
        // Draw ground
        function drawGround() {
            // Ground
            ctx.fillStyle = '#334155';
            ctx.fillRect(0, canvas.height - 20, canvas.width, 20);
            
            // Ground line
            ctx.strokeStyle = '#475569';
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(0, canvas.height - 20);
            ctx.lineTo(canvas.width, canvas.height - 20);
            ctx.stroke();
            
            // Ground pattern
            ctx.fillStyle = '#475569';
            for (let i = 0; i < canvas.width; i += 30) {
                const x = (i - frames * 2) % canvas.width;
                ctx.fillRect(x, canvas.height - 18, 15, 2);
            }
        }
        
        // Draw clouds
        function drawClouds() {
            ctx.fillStyle = 'rgba(255, 255, 255, 0.1)';
            clouds.forEach(cloud => {
                // Update cloud position
                cloud.x -= cloud.speed;
                if (cloud.x < -cloud.width) {
                    cloud.x = canvas.width;
                    cloud.y = Math.random() * 80 + 20;
                }
                
                // Draw cloud
                ctx.beginPath();
                ctx.arc(cloud.x, cloud.y, cloud.width/3, 0, Math.PI * 2);
                ctx.arc(cloud.x + cloud.width/3, cloud.y - cloud.width/6, cloud.width/3, 0, Math.PI * 2);
                ctx.arc(cloud.x + cloud.width/2, cloud.y, cloud.width/3, 0, Math.PI * 2);
                ctx.fill();
            });
        }
        
        // Update dino
        function updateDino() {
            if (!gameRunning || gameOver) return;
            
            // Apply gravity if jumping
            if (dino.jumping) {
                dino.y += dino.jumpVelocity;
                dino.jumpVelocity += dino.gravity;
                
                // Check if landed
                if (dino.y >= canvas.height - dino.height - 20) {
                    dino.y = canvas.height - dino.height - 20;
                    dino.jumping = false;
                    dino.jumpVelocity = 0;
                }
            }
        }
        
        // Draw dino
        function drawDino() {
            // Draw dino body
            ctx.fillStyle = '#10b981';
            ctx.fillRect(dino.x, dino.y, dino.width, dino.height);
            
            // Draw dino head
            ctx.fillStyle = '#059669';
            ctx.fillRect(dino.x + dino.width - 10, dino.y - 10, 20, 20);
            
            // Draw dino eye
            ctx.fillStyle = 'white';
            ctx.beginPath();
            ctx.arc(dino.x + dino.width + 5, dino.y - 3, 4, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.fillStyle = 'black';
            ctx.beginPath();
            ctx.arc(dino.x + dino.width + 5, dino.y - 3, 2, 0, Math.PI * 2);
            ctx.fill();
            
            // Draw dino legs
            const legOffset = Math.sin(frames * 0.2) * 5;
            if (!dino.jumping && gameRunning) {
                ctx.fillStyle = '#059669';
                ctx.fillRect(dino.x + 5, dino.y + dino.height, 8, 15);
                ctx.fillRect(dino.x + dino.width - 13, dino.y + dino.height, 8, 15 + legOffset);
            }
            
            // Draw tail
            ctx.fillStyle = '#059669';
            ctx.beginPath();
            ctx.moveTo(dino.x, dino.y + 10);
            ctx.lineTo(dino.x - 15, dino.y + 20);
            ctx.lineTo(dino.x, dino.y + 30);
            ctx.closePath();
            ctx.fill();
        }
        
        // Update obstacles
        function updateObstacles() {
            if (!gameRunning || gameOver) return;
            
            // Add new obstacle occasionally
            if (frames % (100 - Math.min(score, 70)) === 0) {
                const type = Math.random() > 0.5 ? 'cactus' : 'bird';
                const height = type === 'cactus' ? Math.random() * 20 + 30 : 20;
                const width = type === 'cactus' ? 15 : 25;
                const y = type === 'cactus' ? canvas.height - height - 20 : canvas.height - 80;
                
                obstacles.push({
                    x: canvas.width,
                    y: y,
                    width: width,
                    height: height,
                    type: type
                });
            }
            
            // Update obstacles
            for (let i = obstacles.length - 1; i >= 0; i--) {
                obstacles[i].x -= gameSpeed + score / 100;
                
                // Check collision
                if (checkCollision(dino, obstacles[i])) {
                    gameOver = true;
                    if (score > highScore) {
                        highScore = score;
                    }
                }
                
                // Remove obstacles that are off screen
                if (obstacles[i].x < -obstacles[i].width) {
                    obstacles.splice(i, 1);
                    if (!gameOver) {
                        score++;
                        document.getElementById('score').textContent = score;
                        
                        // Increase game speed gradually
                        if (score % 10 === 0) {
                            gameSpeed += 0.2;
                        }
                    }
                }
            }
        }
        
        // Draw obstacles
        function drawObstacles() {
            obstacles.forEach(obstacle => {
                if (obstacle.type === 'cactus') {
                    // Draw cactus
                    ctx.fillStyle = '#10b981';
                    ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
                    
                    // Cactus details
                    ctx.fillStyle = '#059669';
                    ctx.fillRect(obstacle.x - 3, obstacle.y + 10, 5, 10);
                    ctx.fillRect(obstacle.x + obstacle.width - 2, obstacle.y + 15, 5, 10);
                } else {
                    // Draw bird
                    ctx.fillStyle = '#f87171';
                    ctx.beginPath();
                    ctx.arc(obstacle.x + obstacle.width/2, obstacle.y + obstacle.height/2, obstacle.height/2, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Bird wing
                    ctx.fillStyle = '#ef4444';
                    ctx.beginPath();
                    ctx.ellipse(obstacle.x + obstacle.width/2 - 5, obstacle.y + obstacle.height/2, 10, 5, Math.PI/4, 0, Math.PI * 2);
                    ctx.fill();
                    
                    // Bird eye
                    ctx.fillStyle = 'white';
                    ctx.beginPath();
                    ctx.arc(obstacle.x + obstacle.width/2 + 5, obstacle.y + obstacle.height/2 - 3, 3, 0, Math.PI * 2);
                    ctx.fill();
                    
                    ctx.fillStyle = 'black';
                    ctx.beginPath();
                    ctx.arc(obstacle.x + obstacle.width/2 + 5, obstacle.y + obstacle.height/2 - 3, 1.5, 0, Math.PI * 2);
                    ctx.fill();
                }
            });
        }
        
        // Check collision
        function checkCollision(dino, obstacle) {
            return dino.x < obstacle.x + obstacle.width &&
                   dino.x + dino.width > obstacle.x &&
                   dino.y < obstacle.y + obstacle.height &&
                   dino.y + dino.height > obstacle.y;
        }
        
        // Draw score
        function drawScore() {
            ctx.fillStyle = '#e2e8f0';
            ctx.font = '20px monospace';
            ctx.textAlign = 'left';
            ctx.fillText(`ĐIỂM: ${score}`, 20, 30);
            
            if (highScore > 0) {
                ctx.fillStyle = '#fbbf24';
                ctx.font = '16px monospace';
                ctx.fillText(`CAO NHẤT: ${highScore}`, 20, 55);
            }
        }
        
        // Draw game over screen
        function drawGameOver() {
            // Overlay
            ctx.fillStyle = 'rgba(15, 23, 42, 0.8)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // Game over text
            ctx.fillStyle = '#f87171';
            ctx.font = 'bold 40px monospace';
            ctx.textAlign = 'center';
            ctx.fillText('GAME OVER', canvas.width/2, canvas.height/2 - 30);
            
            // Score text
            ctx.fillStyle = '#e2e8f0';
            ctx.font = '24px monospace';
            ctx.fillText(`Điểm: ${score}`, canvas.width/2, canvas.height/2 + 10);
            
            // High score text
            if (highScore > 0) {
                ctx.fillStyle = '#fbbf24';
                ctx.fillText(`Điểm cao nhất: ${highScore}`, canvas.width/2, canvas.height/2 + 40);
            }
            
            // Restart instruction
            ctx.fillStyle = '#94a3b8';
            ctx.font = '18px monospace';
            ctx.fillText('Nhấn R để chơi lại', canvas.width/2, canvas.height/2 + 80);
        }
        
        // Jump function
        function jump() {
            if (!gameRunning || gameOver || dino.jumping) return;
            dino.jumping = true;
            dino.jumpVelocity = -12;
        }
        
        // Start game function
        function startGame() {
            gameRunning = true;
            gameOver = false;
            score = 0;
            gameSpeed = 5;
            frames = 0;
            obstacles = [];
            
            document.getElementById('score').textContent = score;
            document.getElementById('start-btn').innerHTML = '<i class="fas fa-redo"></i> Chơi Lại';
        }
        
        // User authentication system
        // Khởi tạo dữ liệu người dùng nếu chưa có
        if (!localStorage.getItem('users')) {
            localStorage.setItem('users', JSON.stringify([]));
        }
        
        // Lấy người dùng hiện tại từ session storage
        let currentUser = JSON.parse(sessionStorage.getItem('currentUser'));
        
        // DOM Elements
        const loginFormEl = document.getElementById('login-form');
        const registerFormEl = document.getElementById('register-form');
        const errorPageEl = document.getElementById('error-page');
        const mainContainerEl = document.getElementById('main-container');
        
        const showRegisterLink = document.getElementById('showRegister');
        const showLoginLink = document.getElementById('showLogin');
        const logoutBtn = document.getElementById('logoutBtn');
        
        const loginForm = document.getElementById('loginForm');
        const registerForm = document.getElementById('registerForm');
        
        const accountInfoEl = document.getElementById('accountInfo');
        
        // Kiểm tra nếu đã đăng nhập, hiển thị trang lỗi
        if (currentUser) {
            showErrorPage();
            displayAccountInfo();
        } else {
            showLoginForm();
        }
        
        // Hiển thị form đăng nhập
        function showLoginForm() {
            loginFormEl.classList.add('active');
            registerFormEl.classList.remove('active');
            errorPageEl.classList.remove('active');
            mainContainerEl.classList.remove('large');
            mainContainerEl.style.maxWidth = '450px';
        }
        
        // Hiển thị form đăng ký
        function showRegisterForm() {
            loginFormEl.classList.remove('active');
            registerFormEl.classList.add('active');
            errorPageEl.classList.remove('active');
            mainContainerEl.classList.remove('large');
            mainContainerEl.style.maxWidth = '450px';
        }
        
        // Hiển thị trang lỗi
        function showErrorPage() {
            loginFormEl.classList.remove('active');
            registerFormEl.classList.remove('active');
            errorPageEl.classList.add('active');
            mainContainerEl.classList.add('large');
            mainContainerEl.style.maxWidth = '900px';
            
            // Initialize game when error page is shown
            setTimeout(() => {
                initGame();
            }, 100);
        }
        
        // Hiển thị thông tin tài khoản
        function displayAccountInfo() {
            if (currentUser) {
                accountInfoEl.innerHTML = `
                    <p>Đang đăng nhập: <strong>${currentUser.username}</strong></p>
                    <p>Email: <strong>${currentUser.email}</strong></p>
                    <p>Tài khoản tạo: <strong>${new Date(currentUser.createdAt).toLocaleDateString('vi-VN')}</strong></p>
                `;
            }
        }
        
        // Hiển thị thông báo
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `<i class="fas fa-${type === 'error' ? 'exclamation-circle' : type === 'success' ? 'check-circle' : 'info-circle'}"></i> ${message}`;
            
            document.body.appendChild(notification);
            
            // Hiển thị thông báo
            setTimeout(() => {
                notification.classList.add('show');
            }, 10);
            
            // Ẩn thông báo sau 4 giây
            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 500);
            }, 4000);
        }
        
        // Xử lý đăng nhập
        loginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value;
            
            // Xóa thông báo lỗi cũ
            document.getElementById('loginUsernameError').classList.remove('show');
            document.getElementById('loginPasswordError').classList.remove('show');
            
            // Kiểm tra thông tin đăng nhập
            const users = JSON.parse(localStorage.getItem('users'));
            const user = users.find(u => u.username === username && u.password === password);
            
            if (user) {
                // Lưu thông tin người dùng vào session storage
                sessionStorage.setItem('currentUser', JSON.stringify(user));
                currentUser = user;
                
                // Hiển thị trang lỗi
                showErrorPage();
                displayAccountInfo();
                showNotification('Đăng nhập thành công! Chào mừng trở lại.', 'success');
                
                // Reset form
                loginForm.reset();
            } else {
                // Hiển thị lỗi
                document.getElementById('loginPasswordError').textContent = 'Tên đăng nhập hoặc mật khẩu không đúng';
                document.getElementById('loginPasswordError').classList.add('show');
                showNotification('Đăng nhập thất bại. Vui lòng kiểm tra thông tin đăng nhập.', 'error');
            }
        });
        
        // Xử lý đăng ký
        registerForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('registerUsername').value.trim();
            const email = document.getElementById('registerEmail').value.trim();
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('registerConfirmPassword').value;
            
            // Xóa thông báo lỗi cũ
            const errorElements = [
                'registerUsernameError',
                'registerEmailError',
                'registerPasswordError',
                'registerConfirmPasswordError'
            ];
            
            errorElements.forEach(id => {
                document.getElementById(id).classList.remove('show');
            });
            
            let isValid = true;
            
            // Kiểm tra username
            if (username.length < 3) {
                document.getElementById('registerUsernameError').textContent = 'Tên đăng nhập phải có ít nhất 3 ký tự';
                document.getElementById('registerUsernameError').classList.add('show');
                isValid = false;
            }
            
            // Kiểm tra email
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                document.getElementById('registerEmailError').textContent = 'Vui lòng nhập địa chỉ email hợp lệ';
                document.getElementById('registerEmailError').classList.add('show');
                isValid = false;
            }
            
            // Kiểm tra password
            if (password.length < 6) {
                document.getElementById('registerPasswordError').textContent = 'Mật khẩu phải có ít nhất 6 ký tự';
                document.getElementById('registerPasswordError').classList.add('show');
                isValid = false;
            }
            
            // Kiểm tra confirm password
            if (password !== confirmPassword) {
                document.getElementById('registerConfirmPasswordError').textContent = 'Mật khẩu không khớp';
                document.getElementById('registerConfirmPasswordError').classList.add('show');
                isValid = false;
            }
            
            // Kiểm tra username đã tồn tại chưa
            const users = JSON.parse(localStorage.getItem('users'));
            const existingUser = users.find(u => u.username === username);
            
            if (existingUser) {
                document.getElementById('registerUsernameError').textContent = 'Tên đăng nhập đã tồn tại';
                document.getElementById('registerUsernameError').classList.add('show');
                isValid = false;
            }
            
            // Kiểm tra email đã tồn tại chưa
            const existingEmail = users.find(u => u.email === email);
            
            if (existingEmail) {
                document.getElementById('registerEmailError').textContent = 'Email đã được đăng ký';
                document.getElementById('registerEmailError').classList.add('show');
                isValid = false;
            }
            
            if (isValid) {
                // Tạo tài khoản mới
                const newUser = {
                    username,
                    email,
                    password,
                    createdAt: new Date().toISOString()
                };
                
                // Lưu vào localStorage
                users.push(newUser);
                localStorage.setItem('users', JSON.stringify(users));
                
                // Hiển thị thông báo thành công
                showNotification('Tạo tài khoản thành công! Bạn có thể đăng nhập ngay bây giờ.', 'success');
                
                // Reset form
                registerForm.reset();
                
                // Chuyển về trang đăng nhập
                showLoginForm();
            } else {
                showNotification('Vui lòng sửa các lỗi trong biểu mẫu.', 'error');
            }
        });
        
        // Xử lý nút reload
        document.getElementById('reloadBtn').addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Đang tải lại...';
            this.disabled = true;
            
            // Giả lập reload
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-redo"></i> Tải Lại';
                this.disabled = false;
                showNotification('Không thể tải lại trang. Vui lòng kiểm tra kết nối internet của bạn.', 'error');
            }, 1500);
        });
        
        // Xử lý nút diagnostics
        document.getElementById('diagnoseBtn').addEventListener('click', function() {
            showNotification('Chẩn đoán hoàn tất. Phát hiện sự cố với kết nối mạng.', 'info');
        });
        
        // Xử lý logout
        logoutBtn.addEventListener('click', function() {
            // Xóa thông tin người dùng khỏi session storage
            sessionStorage.removeItem('currentUser');
            currentUser = null;
            
            // Hiển thị form đăng nhập
            showLoginForm();
            
            // Hiển thị thông báo
            showNotification('Bạn đã đăng xuất thành công.', 'success');
        });
        
        // Chuyển đổi giữa các form
        showRegisterLink.addEventListener('click', function(e) {
            e.preventDefault();
            showRegisterForm();
        });
        
        showLoginLink.addEventListener('click', function(e) {
            e.preventDefault();
            showLoginForm();
        });
        
        // Game event listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Start game button
            document.getElementById('start-btn').addEventListener('click', startGame);
            
            // Game controls
            document.addEventListener('keydown', function(e) {
                // Jump on space or up arrow
                if ((e.code === 'Space' || e.code === 'ArrowUp') && !gameOver) {
                    jump();
                    e.preventDefault();
                }
                
                // Restart game on R key
                if (e.code === 'KeyR' && gameOver) {
                    startGame();
                }
                
                // Start game on Enter if not running
                if (e.code === 'Enter' && !gameRunning) {
                    startGame();
                }
            });
            
            // Touch controls for mobile
            canvas?.addEventListener('click', function() {
                if (!gameOver && gameRunning) {
                    jump();
                } else if (!gameRunning) {
                    startGame();
                }
            });
            
            // Window resize handler
            window.addEventListener('resize', function() {
                if (canvas) {
                    canvas.width = canvas.offsetWidth;
                    canvas.height = canvas.offsetHeight;
                    dino.y = canvas.height - dino.height - 20;
                }
            });
        });
        
        // Demo accounts (tự động thêm nếu chưa có)
        window.addEventListener('load', function() {
            const users = JSON.parse(localStorage.getItem('users'));
            
            // Kiểm tra xem đã có tài khoản demo chưa
            const demoAccounts = [
                { username: 'demo', email: 'demo@example.com', password: 'demo123' },
                { username: 'admin', email: 'admin@example.com', password: 'admin123' }
            ];
            
            let addedDemo = false;
            
            demoAccounts.forEach(demoAccount => {
                const existingUser = users.find(u => u.username === demoAccount.username);
                
                if (!existingUser) {
                    users.push({
                        ...demoAccount,
                        createdAt: new Date().toISOString()
                    });
                    addedDemo = true;
                }
            });
            
            if (addedDemo) {
                localStorage.setItem('users', JSON.stringify(users));
            }
        });
    </script>
</body>
</html>
