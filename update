            color: #fbbf24;
        }
        
        .game-controls {
            display: flex;
            gap: 15px;
            align-items: center;
        }
        
        .score-container {
            background: rgba(15, 23, 42, 0.7);
            padding: 10px 20px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .score-label {
            font-size: 14px;
            color: #94a3b8;
        }
        
        .score-value {
            font-size: 28px;
            font-weight: 700;
            color: #10b981;
            text-shadow: 0 0 10px rgba(16, 185, 129, 0.3);
        }
        
        #start-btn {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
